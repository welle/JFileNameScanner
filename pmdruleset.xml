<?xml version="1.0"?>
<ruleset name="Custom ruleset"
    xmlns="http://pmd.sf.net/ruleset/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
    xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">

    <description>
        This ruleset checks my code for bad stuff
    </description>

    <exclude-pattern>.*_JUnitTest.*</exclude-pattern>
    <exclude-pattern>.*/jet/phoenix/persistence/.*</exclude-pattern>

    <rule ref="rulesets/java/basic.xml" />

    <rule ref="rulesets/java/imports.xml" />

    <rule ref="rulesets/java/design.xml">
        <exclude name="ConfusingTernary" />
        <exclude name="UnnecessaryLocalBeforeReturn" />
        <exclude name="EmptyMethodInAbstractClassShouldBeAbstract" />
    </rule>

    <rule ref="rulesets/java/design.xml/ConfusingTernary">
        <priority>5</priority>
    </rule>

    <rule ref="rulesets/java/braces.xml" />

    <rule ref="rulesets/java/optimizations.xml">
        <!-- later -->
        <exclude name="MethodArgumentCouldBeFinal" />
        <exclude name="LocalVariableCouldBeFinal" />
        <!-- PMD 5.0.1 : causing errors : java.lang.ClassCastException: net.sourceforge.pmd.lang.java.ast.ASTType cannot be cast to net.sourceforge.pmd.lang.java.ast.ASTVariableDeclarator -->
        <exclude name="PrematureDeclaration" />
    </rule>

    <rule ref="rulesets/java/strings.xml">
        <!-- lower priority -->
        <exclude name="AvoidDuplicateLiterals" />
    </rule>

    <rule ref="rulesets/java/codesize.xml" />

